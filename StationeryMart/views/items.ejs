        <div class="col col-sm-2 mt-1 p-1"><p>Quantity Reqd</p></div>     
</div>
<br>


<% data.forEach(function (item) { %>
  <form action="/cart/buy" method="post">
    <div class="row  border border-primary" >
        <div class="col col-sm-1 mt-1 p-1 text-center" style="width: 20px">
            <input type="checkbox" value="" id="Check1">
        </div>
        <div class="col col-sm-2 mt-1 p-1"><input type="text" style="border:none" value="<%= item.itemName %>"  name="itemName" id="itemName"></div>
        <div class="col col-sm-2 mt-1 p-1"><%= item.count %></div>
        <div class="col col-sm-2 mr-0 pr-0 mt-1 p-1">
            <span class="col-sm-1 p-0 m-0 float-left">$</span>
            <input type="text" class=" col-sm-5 m-0 p-0 mr-0 pr-0 pl-1" style="border:none" value="<%= item.price %>"  name="price" id="price">
        </div>
        <div class="col col-sm-2 mt-1 border-top-0 border-bottom-0 border-primary p-1">
            <input class="border border-primary col-sm-6" type="number" value="" name="quantity" id="quantity">
        </div>  

        <div class="col col-sm-2 p-1">
       <!--   <a class="btn btn-primary post" role="button" href="/cart/buy/<%= item.id %>" >Add to cart</a> -->
       <button type="submit" class="btn btn-primary">Add to Cart</button>
        </div>

    </div>
    <br>
  </form>
<% }); %>

